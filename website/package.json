{
  "name": "cal-itp-reports",
  "version": "1.0.0",
  "description": "GTFS data quality reports for California transit providers",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cal-itp/reports.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cal-itp/reports/issues"
  },
  "homepage": "https://github.com/cal-itp/reports#readme",
  "engines": {
    "node": ">=12",
    "npm": ">=7"
  },
  "dependencies": {
    "alpinejs": "^3.8.1",
    "billboard.js": "^3.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-multi-entry": "^5.0.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.2.6",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.6",
    "mjml": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.10.0",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "rollup": "^2.67.1",
    "rollup-plugin-import-css": "^3.0.3",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.1",
    "tailwindcss": "^2.2.0",
    "terser": "^5.14.2"
  },
  "scripts": {
    "build": "NODE_ENV=production npm-run-all html css images js",
    "html": "echo 'processing html...'; if python3 generate.py -eq 0; then echo 'html ready'; else echo 'html failed' && exit 1; fi",
    "css": "echo 'processing css...'; npm-run-all css:clean css:sass css:postcss; echo 'css ready'",
    "css:clean": "rm -f build/css/*",
    "css:postcss": "postcss --ext min.css --dir build/css/ build/css/*.css",
    "css:sass": "sass --no-source-map assets/scss:build/css",
    "images": "copyfiles --up 2 assets/images/**/*.{jpeg,jpg,png,gif,svg} build/images",
    "js": "rollup --config",
    "watch": "npm-watch"
  },
  "watch": {
    "html": {
      "patterns": [
        "../templates"
      ],
      "extensions": "json,html,jinja"
    },
    "css": {
      "patterns": [
        "assets/scss",
        "build/html"
      ],
      "extensions": "scss,html"
    },
    "images": {
      "patterns": [
        "assets/images"
      ],
      "extensions": "jpeg,jpg,png,gif,svg"
    },
    "js": {
      "patterns": [
        "assets/js"
      ],
      "extensions": "js"
    }
  }
}
